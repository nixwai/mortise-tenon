{
  "name": "mortise-tenon",
  "version": "1.0.0",
  "description": "",
  "author": "xy",
  "license": "ISC",
  "keywords": [
    "vue"
  ],
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "docs:dev": "pnpm run -C docs docs:dev",
    "docs:build": "pnpm run -C docs docs:build",
    "examples:dev": "pnpm run -C examples dev",
    "examples:build": "pnpm run -C examples build",
    "design:build": "pnpm run -C packages/core design:build",
    "design:publish": "pnpm run -C packages/core design:publish",
    "use:build": "pnpm run -C packages/core use:build",
    "tool:build": "pnpm run -C packages/core tool:build",
    "preset:build": "pnpm run -C packages/core preset:build",
    "lint:style": "stylelint \"./**/*.{css,less,vue,html}\" --fix",
    "prepare": "husky install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "dependencies": {
    "@mortise-tenon/components": "workspace:*",
    "@mortise-tenon/hooks": "workspace:*",
    "@mortise-tenon/presets": "workspace:^",
    "@mortise-tenon/utils": "workspace:*",
    "@vueuse/core": "^12.3.0",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.13.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.10.5",
    "@unocss/eslint-plugin": "0.65.4",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.17.0",
    "eslint-plugin-format": "^1.0.1",
    "happy-dom": "^16.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "postcss": "^8.4.49",
    "postcss-html": "^1.7.0",
    "postcss-scss": "^4.0.9",
    "release-it": "^18.1.1",
    "sass": "^1.83.1",
    "stylelint": "^16.12.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.10.0",
    "typescript": "^5.7.3",
    "unocss": "0.65.4",
    "vite": "^6.0.7",
    "vitest": "^2.1.8",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.0"
  },
  "lint-staged": {
    "*.{vue,js,ts,tsx,jsx}": [
      "eslint . --fix"
    ]
  }
}
